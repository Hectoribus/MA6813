<?xml version="1.0"?>
<robot name="table_with_post">
    
    <!-- Table Link -->
    <link name="table">
        <visual>
            <geometry>
                <box size="1.0 1.5 1.0"/>
            </geometry>
            <origin xyz="0 0 0.5"/>
            <material name="Gray">
                <color rgba="0.5 0.5 0.5 1.0"/>
            </material>
        </visual>

        <collision>
            <geometry>
                <box size="1.0 1.5 1.0"/>
            </geometry>
            <origin xyz="0 0 0.5"/>
        </collision>

        <inertial>
            <mass value="10.0"/>
            <origin xyz="0 0 0.5"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                     iyy="1.0" iyz="0.0"
                     izz="1.0"/>
        </inertial>
    </link>

    <!-- Post Link -->
        <!-- Post Link -->

    <link name="post">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="1.0"/>
            </geometry>
            <origin xyz="0 0 1.5"/>
            <material name="Blue">
                <color rgba="0.0 0.0 1.0 1.0"/>
            </material>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.1" length="1.0"/>
            </geometry>
            <origin xyz="0 0 1.5"/>
        </collision>

        <inertial>
            <mass value="5.0"/>
            <origin xyz="0 0 1.5"/>
            <inertia ixx="0.5" ixy="0.0" ixz="0.0"
                     iyy="0.5" iyz="0.0"
                     izz="0.5"/>
        </inertial>
    </link>

    <!-- Fixed Joint: Attaches Post to Table -->
    <joint name="table_to_post" type="fixed">
        <parent link="table"/>
        <child link="post"/>
        <origin xyz="0 0 1.0"/>  <!-- Position at table surface -->
    </joint>

</robot>
